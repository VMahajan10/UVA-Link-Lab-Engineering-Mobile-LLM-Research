<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include app preferences and settings -->
        <include domain="sharedpref" path="." />
        
        <!-- Include database files -->
        <include domain="database" path="." />
        
        <!-- Exclude large model files -->
        <exclude domain="file" path="models/" />
        <exclude domain="file" path="**/*.gguf" />
        <exclude domain="file" path="**/*.bin" />
        <exclude domain="file" path="**/*.safetensors" />
        
        <!-- Exclude CSV export files -->
        <exclude domain="file" path="**/*.csv" />
        
        <!-- Exclude temporary files -->
        <exclude domain="file" path="**/*.tmp" />
        <exclude domain="file" path="**/*.temp" />
        <exclude domain="file" path="cache/" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Include app data for device transfer -->
        <include domain="file" path="." />
        
        <!-- Exclude large model files -->
        <exclude domain="file" path="models/" />
        <exclude domain="file" path="**/*.gguf" />
        <exclude domain="file" path="**/*.bin" />
        <exclude domain="file" path="**/*.safetensors" />
        
        <!-- Exclude CSV export files -->
        <exclude domain="file" path="**/*.csv" />
        
        <!-- Exclude temporary files -->
        <exclude domain="file" path="**/*.tmp" />
        <exclude domain="file" path="**/*.temp" />
        <exclude domain="file" path="cache/" />
    </device-transfer>
</data-extraction-rules>
